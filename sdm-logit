#!/bin/bash
#
# $1 has the message
#

#
# Prefix path to history log if we've been run from phase 0
# Otherwise, we're in the nspawn so prefix not required
#
[[ "$0" =~ "/mnt/sdm" ]] && i="/mnt/sdm" || i=""
if [ -f "$i/etc/sdm/history" ]
then
    echo "$(date +'%Y-%m-%d %H:%M:%S') $1" >> $i/etc/sdm/history
else
    echo "$(date +'%Y-%m-%d %H:%M:%S') $1" > $i/etc/sdm/history
fi
